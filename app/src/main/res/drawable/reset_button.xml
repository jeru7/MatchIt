<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mainLightColor"/>
            <stroke
                android:width="3dp"
                android:color="@color/mainDarkColor"
                />
            <corners
                android:radius="8dp"/>

            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/refresh_icon"
        android:gravity="center"/>

</layer-list>
